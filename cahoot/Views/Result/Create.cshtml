@model cahoot.Models.ViewModels.ResultModel

@{
    ViewBag.Title = @cahoot.Code.Constants.TeamName + " - " + "Skapa ny matchrapport";
}

<h2>Skapa ny matchrapport</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.custom.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/DatePicker/ui.datepicker-sv.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $("#Match_Date").datepicker();
    });
</script>

<div id="matchreport">
@using (Html.BeginForm()) {
    @Html.ValidationSummary()
        <div class="subarea">
        <fieldset>
            <div class="input-group">
                @Html.LabelFor(model => model.Match.Round, "Omgnr.")
                @Html.TextBoxFor(model => model.Match.Round, new { @class = "form-control small-input" })
            </div>
            <div class="input-group">
                @Html.LabelFor(model => model.Match.Date, "Datum")            
                @Html.TextBoxFor(model => model.Match.Date, new { @class = "form-control small-input" })
            </div>
            <div class="input-group">
                @Html.LabelFor(model => model.Match.Location, "Plats")
                @Html.TextBoxFor(model => model.Match.Location, new { @class = "form-control small-input" })
            </div>
            <div class="input-group">
                @Html.LabelFor(model => model.Match.TeamId, "Lag")
                @Html.DropDownListFor(model => model.Match.TeamId, new SelectList(ViewBag.Teams as System.Collections.IEnumerable, "TeamId", "Name"), null, new { @class = "form-control small-input" })
            </div>

            <div class="input-group">
                @Html.LabelFor(model => model.Match.Opponent, "Motståndare")
                @Html.TextBoxFor(model => model.Match.Opponent, new { @class = "form-control small-input" })
            </div>
        </fieldset>
            <legend>Vårat resultat</legend>
                <div class="input-group">
                    @Html.LabelFor(model => model.Match.OurPoints, "Poäng")
                    @Html.TextBoxFor(model => model.Match.OurPoints, new { @class = "form-control small-input" })
                    @Html.LabelFor(model => model.Match.OurScore, "Slagning")
                    @Html.TextBoxFor(model => model.Match.OurScore, new { @class = "form-control small-input" })
                </div>
            <legend>Deras resultat</legend>
                <div class="input-group">
                    @Html.LabelFor(model => model.Match.OpponentPoints, "Poäng")
                    @Html.TextBoxFor(model => model.Match.OpponentPoints, new { @class = "form-control small-input" })
                    @Html.LabelFor(model => model.Match.OpponentScore, "Slagning")
                    @Html.TextBoxFor(model => model.Match.OpponentScore, new { @class = "form-control small-input" })
                </div>
            <legend>Bästa spelare (namn och resultat)</legend>
            <div class="editor-matchlabel">
                <label for="BestResult">Bäst: </label>
                @Html.DropDownList("BestPlayer", new SelectList(ViewBag.Members as System.Collections.IEnumerable, "MemberId", "Name"), null, new { @class = "form-control small-input" })
                @Html.TextBox("BestResult", null, new { @class = "form-control small-input" })
            </div>
            <div class="editor-matchlabel">
                <label for="SecondBestResult">Näst bäst: </label>
                @Html.DropDownList("SecondBestPlayer", new SelectList(ViewBag.Members as System.Collections.IEnumerable, "MemberId", "Name"), null, new { @class = "form-control small-input" })
                @Html.TextBox("SecondBestResult", null, new { @class = "form-control small-input" })
            </div>
            <div class="editor-matchlabel">
                <label for="ThirdBestResult">Tredje bäst: </label>
                @Html.DropDownList("ThirdBestPlayer", new SelectList(ViewBag.Members as System.Collections.IEnumerable, "MemberId", "Name"), null, new { @class = "form-control small-input" })
                @Html.TextBox("ThirdBestResult", null, new { @class = "form-control small-input" })
            </div>
            <div class="editor-matchlabel">
                <label for="FourthBestResult">Fjärde bäst: </label>
                @Html.DropDownList("FourthBestPlayer", new SelectList(ViewBag.Members as System.Collections.IEnumerable, "MemberId", "Name"), null, new { @class = "form-control small-input" })
                @Html.TextBox("FourthBestResult", null, new { @class = "form-control small-input" })
            </div>
            <div class="editor-matchlabel">
                <label for="FifthBestResult">Femte bäst: </label>
                @Html.DropDownList("FifthBestPlayer", new SelectList(ViewBag.Members as System.Collections.IEnumerable, "MemberId", "Name"), null, new { @class = "form-control small-input" })
                @Html.TextBox("FifthBestResult", null, new { @class = "form-control small-input" })
            </div>
        </div>

        <p>
            <input type="submit" value="Spara" class="btn btn-primary" />
        </p>
}
</div>
<div class="backlink">
    @Html.ActionLink("Tillbaka till matchresultaten", "Index")
</div>

