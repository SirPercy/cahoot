@model cahoot.Models.ViewModels.SponsorsModel

@{
    ViewBag.Title = @cahoot.Code.Constants.TeamName + "- Lägg till sponsor";
}

<h2>Lägg till ny sponosr</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary()
         <div class="input-group">
            @Html.LabelFor(model => model.SponsorItem.Name, "Namn")
            @Html.TextBoxFor(model => model.SponsorItem.Name, new { @class = "form-control" })
        </div>
         <div class="input-group">
            @Html.LabelFor(model => model.SponsorItem.Link, "Webbadress")
            @Html.TextBoxFor(model => model.SponsorItem.Link, new { @class = "form-control" })
        </div>
         <div class="input-group">
            @Html.LabelFor(model => model.SponsorItem.LogotypeUrl, "Länk til logotyp")
            @Html.TextBoxFor(model => model.SponsorItem.LogotypeUrl, new { @class="form-control", size = 70,  })
            @Html.LabelFor(model => model.SponsorItem.TeaserText, "Övrig information")
        </div>   
         <div class="input-group">
            @Html.TextBoxFor(model => model.SponsorItem.TeaserText, new { size = 70, @class="form-control"})
        </div>

        <p>
            <br />
            <input type="submit" value="Spara" class="btn btn-primary" />
        </p>
}

<div class="backlink">
    @Html.ActionLink("Tillbaka till listan med sponsorer", "Index")
</div>


