@model cahoot.Models.ViewModels.MemberModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <fieldset>
        <div class="input-group">
            @Html.LabelFor(model => model.Member.Name)
            @Html.TextBoxFor(model => model.Member.Name, new { @class = "form-control" })
        </div>

        <div class="input-group">
            @Html.LabelFor(model => model.Member.Phone)
            @Html.TextBoxFor(model => model.Member.Phone, new { @class = "form-control" })
       </div>

        <div class="input-group">
            @Html.LabelFor(model => model.Member.Email)
             @Html.TextBoxFor(model => model.Member.Email, new { @class = "form-control" })
        </div>

        <div class="input-group">
            @Html.LabelFor(model => model.Member.Gender)
           @Html.DropDownListFor(model => model.Member.Gender, Model.Gender, null, new { @class = "form-control small-input" })
        </div>
        @if (User.Identity.Name == "Admin")
        {
            <div class="input-group">
                @Html.LabelFor(model => model.Member.Status)
                @Html.DropDownListFor(model => model.Member.Status, Model.Status, null, new { @class = "form-control small-input" })
            </div>
            <div class="input-group">
                @Html.LabelFor(model => model.Member.UserName)
                @Html.TextBoxFor(model => model.Member.UserName, new { @class = "form-control" })
            </div>
            <div class="input-group">
                @Html.LabelFor(model => model.Member.PassWord)
               @Html.TextBoxFor(model => model.Member.PassWord, new { @class = "form-control" })
            </div>
        }
        @Html.HiddenFor(model => model.Member.MemberID)
        <p>
            <br />
            <input type="submit" value="Spara" class="btn btn-primary" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Tillbaka till medlemslistan", "Index")
</div>